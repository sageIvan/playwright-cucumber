{
  "name": "playwright-cucumber",
  "version": "1.0.0",
  "description": "Playwright with Cucumber testing framework",
  "main": "index.js",
  "scripts": {
    "tutorial": "cucumber-js --tags @tutorial",
    "tutorial:lesson0": "cucumber-js --tags @lesson-0",
    "tutorial:lesson1": "cucumber-js --tags @lesson-1",
    "tutorial:lesson2": "cucumber-js --tags @lesson-2",
    "tutorial:lesson3": "cucumber-js --tags @lesson-3",
    "tutorial:lesson4": "cucumber-js --tags @lesson-4",
    "tutorial:lesson5": "cucumber-js --tags @lesson-5",
    "tutorial:lesson6": "cucumber-js --tags @lesson-6",
    "tutorial:lesson7": "cucumber-js --tags @lesson-7",
    "tutorial:lesson8": "cucumber-js --tags @lesson-8",
    "tutorial:api": "cucumber-js --tags @api",
    "tutorial:easy": "cucumber-js --tags @easy",
    "tutorial:medium": "cucumber-js --tags @medium",
    "tutorial:hard": "cucumber-js --tags @hard",
    "tutorial:headed": "cucumber-js --parallel 1 --tags @tutorial",
    "test": "cucumber-js",
    "test:headed": "cucumber-js --parallel 1",
    "test:debug": "cucumber-js --parallel 1 --tags @debug",
    "test:smoke": "cucumber-js --tags @smoke",
    "test:regression": "cucumber-js --tags @regression",
    "report": "npx allure generate allure-results --clean -o allure-report && npx allure open allure-report",
    "report:generate": "npx allure generate allure-results --clean -o allure-report",
    "report:open": "npx allure open allure-report",
    "report:serve": "npx allure serve allure-results",
    "test:with-report": "npm test && npm run report:generate",
    "api:with-report": "npm run tutorial:api && npm run report:generate",
    "build": "tsc",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "playwright": "npx playwright test",
    "playwright:ui": "npx playwright test --ui",
    "playwright:headed": "npx playwright test --headed",
    "generate:specs": "node regenerate-specs.js",
    "dev:ui": "node generate-specs.js",
    "ui:refresh": "node generate-specs.js"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "typescript",
    "bdd",
    "testing",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@playwright/test": "^1.47.0",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "allure-commandline": "^2.30.0",
    "allure-cucumberjs": "^2.15.0",
    "eslint": "^9.9.0",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
